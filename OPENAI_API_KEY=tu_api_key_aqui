require("dotenv").config();
const express = require("express");
const bodyParser = require("body-parser");
const fetch = require("node-fetch");
const path = require("path");

const app = express();
app.use(bodyParser.json());
app.use(express.static(path.join(__dirname, "public"))); // Servir frontend

app.post("/generar-ensayo", async (req, res) => {
  const { tema } = req.body;

  try {
    const respuesta = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "Authorization": `Bearer ${process.env.OPENAI_API_KEY}`
      },
      body: JSON.stringify({
        model: "gpt-4",
        messages: [
          { role: "system", content: "Eres un generador de ensayos acadÃ©micos." },
          { role: "user", content: `Escribe un ensayo sobre: ${tema}` }
        ]
      })
    });

    const data = await respuesta.json();
    res.json({ ensayo: data.choices[0].message.content });
  } catch (error) {
    console.error(error);
    res.status(500).json({ error: "Error generando el ensayo" });
  }
});

app.listen(3000, () => console.log("Servidor en http://localhost:3000"));
